<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="list_partner">
      <field name="name">modulo_dois list</field>
      <field name="model">modelo</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="street"/>
          <field name="number"/>
          <button name="action_validar_cliente" type="object" string="Validar" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="form_modelo">
      <field name="name">modulo_dois form</field>
      <field name="model">modelo</field>
      <field name="arch" type="xml">
        <form>
            <header>
              <button name="action_validar_cliente" type="object" string="Validar" />
            </header>
            <sheet>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="gender" widget="radio"/>
                        <field name="street"/>
                        <field name="number"/>
                        <field name="photo" widget="image" class="oe_avatar"/>
                    </group>
                    <group>
                        <field name="birth"/>
                        <field name="age"/>
                        <field name="is_customer"/>
                        <field name="last_sale"/>
                        <field name="amount_sale"/>
                        <field name="tag_ids" widget="many2many_tags" />
                    </group>
                </group>
                <group>
                    <field name="propposal_ids" />
                </group>
            </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="search_modelo">
      <field name="name">modulo_dois form</field>
      <field name="model">modelo</field>
      <field name="arch" type="xml">
          <search>
              <field name="name"/>
              <field name="street"/>
              <filter name="customer" string="É cliente?" domain="[('is_customer', '=', True)]"/>
              <filter name="not_customer" string="Não clientes" domain="[('is_customer', '=', False)]"/>
          </search>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="action_window_cliente">
      <field name="name">Clientes</field>
      <field name="res_model">modelo</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'search_default_customer':1}</field>
    </record>

    <record model="ir.actions.act_window" id="action_window_nao_cliente">
      <field name="name">Não Clientes</field>
      <field name="res_model">modelo</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'search_default_not_customer':1}</field>
    </record>

    <menuitem name="Meu Módulo" id="menu_root" />

    <menuitem name="Menu 1" id="menu_1" parent="menu_root"/>

    <menuitem name="Clientes" id="menu_clientes" parent="menu_1" action="action_window_cliente"/>
    <menuitem name="Não Clientes" id="menu_nao_cliente" parent="menu_1" action="action_window_nao_cliente"/>

    <!-- menu categories -->
    <!--
    <menuitem name="Menu 2" id="modulo_dois.menu_2" parent="modulo_dois.menu_root"/>
    -->
    <!-- actions -->
    <!--

    <menuitem name="Server to list" id="modulo_dois" parent="modulo_dois.menu_2"
              action="modulo_dois.action_server"/>
    -->
  </data>
</odoo>
